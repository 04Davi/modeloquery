@page
@model Database.Pages.DashboardModel
@{
    ViewData["Title"] = "Panel de Control";
}

@if (!string.IsNullOrEmpty(Model.DbConnectionMessage))
{
    <div class="alert @(Model.DbConnectionMessage.Contains("éxito") ? "alert-success" : 
                      Model.DbConnectionMessage.Contains("Error") ? "alert-danger" : "alert-warning")" 
         role="alert">
        @Model.DbConnectionMessage
    </div>
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --primary-dark: #3a0ca3;
            --primary-light: #4895ef;
            --secondary: #7209b7;
            --success: #4cc9f0;
            --info: #4361ee;
            --warning: #f8961e;
            --danger: #f72585;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --gray-light: #e9ecef;
            --sidebar-width: 280px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fb;
            color: var(--dark);
            margin: 0;
            padding: 0;
        }

        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Estilizado */
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--primary-dark), var(--primary));
            color: white;
            padding: 0;
            position: fixed;
            height: 100vh;
            box-shadow: 5px 0 15px rgba(0,0,0,0.1);
            z-index: 1000;
            transition: all 0.3s;
        }

        .sidebar-header {
            padding: 25px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex;
            align-items: center;
            background-color: rgba(0,0,0,0.1);
        }

        .sidebar-header img {
            width: 36px;
            margin-right: 12px;
        }

        .sidebar-header h3 {
            margin: 0;
            font-weight: 600;
            font-size: 1.2rem;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            position: relative;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            color: rgba(255,255,255,0.85);
            text-decoration: none;
            transition: all 0.3s;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .sidebar-menu a:hover {
            background-color: rgba(255,255,255,0.1);
            color: white;
            padding-left: 30px;
        }

        .sidebar-menu a.active {
            background-color: rgba(255,255,255,0.15);
            color: white;
            border-left: 4px solid var(--success);
        }

        .sidebar-menu i {
            width: 24px;
            text-align: center;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        .sidebar-menu .badge {
            margin-left: auto;
            background-color: var(--danger);
            border-radius: 10px;
            padding: 3px 8px;
            font-size: 0.7rem;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 30px;
            transition: all 0.3s;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .page-header h2 {
            font-weight: 700;
            color: var(--dark);
            margin: 0;
            font-size: 1.8rem;
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            border: 2px solid var(--primary-light);
        }

        .user-profile .user-info {
            line-height: 1.3;
        }

        .user-profile .user-name {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .user-profile .user-role {
            font-size: 0.8rem;
            color: var(--gray);
        }

        /* Cards */
        .card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.03);
            margin-bottom: 30px;
            border: none;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        }

        .card-header {
            background-color: transparent;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 20px 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header h3 {
            margin: 0;
            font-weight: 600;
            color: var(--dark);
            font-size: 1.2rem;
        }

        .card-header i {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .card-body {
            padding: 25px;
        }

        /* Features Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }

        .feature-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            border-color: var(--primary-light);
        }

        .feature-icon {
            width: 70px;
            height: 70px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }

        .feature-card h4 {
            margin: 0 0 10px;
            font-weight: 600;
            color: var(--dark);
        }

        .feature-card p {
            color: var(--gray);
            font-size: 0.9rem;
            margin: 0;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                position: fixed;
            }
            .sidebar.active {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <img src="https://cdn-icons-png.flaticon.com/512/477/477103.png" alt="DB Icon">
            <h3>DB Admin Pro</h3>
        </div>
        <ul class="sidebar-menu">
            <li><a href="#" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
            <li><a href="#"><i class="fas fa-table"></i> Tablas</a></li>
            <li><a href="#"><i class="fas fa-project-diagram"></i> Relaciones</a></li>
            <li><a href="#"><i class="/SqlQuery"></i> Consulta SQL</a></li>
            <li><a href="#"><i class="fas fa-users"></i> Usuarios</a></li>
            <li><a href="#"><i class="fas fa-key"></i> Permisos</a></li>
            <li><a href="#"><i class="fas fa-save"></i> Backups</a></li>
            <li><a href="#"><i class="fas fa-chart-line"></i> Analítica</a></li>
            <li><a href="#"><i class="fas fa-cog"></i> Configuración</a></li>
        </ul>
    </div>
}

    <!-- Main Content -->
    <div class="main-content">
        <div class="page-header">
            <h2>Panel de Control</h2>
            <div class="user-profile">
                <img src="https://ui-avatars.com/api/?name=Admin&background=4361ee&color=fff" alt="Usuario">
                <div class="user-info">
                    <div class="user-name">Administrador</div>
                    <div class="user-role">Super Admin</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Resumen del Sistema</h3>
                <i class="fas fa-database"></i>
            </div>
            <div class="card-body">
                <p>Bienvenido al sistema de administración de bases de datos. Desde aquí podrás gestionar todos los aspectos de tu base de datos.</p>
            </div>
        </div>

        <h3 style="margin-bottom: 20px;">Funcionalidades Principales</h3>
        
        <div class="features-grid">
            <!-- Crear Tabla -->
            <a href="#" class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-table"></i>
                </div>
                <h4>Crear Tabla</h4>
            </a>

            <!-- Administrar Tablas -->
            <a href="#" class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, var(--secondary), #560bad);">
                    <i class="fas fa-edit"></i>
                </div>
                <h4>Administrar Tablas</h4>
            </a>

            <!-- Relaciones -->
            <a href="#" class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, var(--warning), #f3722c);">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <h4>Gestionar Relaciones</h4>
            </a>

            <!-- Consulta SQL -->
            <a asp-page="/SqlQuery" class="feature-card">
            <div class="feature-icon" style="background: linear-gradient(135deg, var(--success), #38b000);">
            <i class="fas fa-terminal"></i>
                 </div>
                     <h4>Consulta SQL</h4>
                    </a>

            <!-- Importar/Exportar -->
            <a href="#" class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, var(--danger), #d00000);">
                    <i class="fas fa-file-import"></i>
                </div>
                <h4>Importar/Exportar</h4>
            </a>

            <!-- Seguridad -->
            <a href="#" class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #7209b7, #480ca8);">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h4>Seguridad</h4>
            </a>
        </div>
    </div>
</div>

